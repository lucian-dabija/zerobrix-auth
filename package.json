{
  "name": "@zerocat-software/zerobrix-auth",
  "version": "1.0.11",
  "description": "Modern authentication solution for Next.js applications using ZeroBrix wallet",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf ./dist",
    "typecheck": "tsc --noEmit",
    "build:full": "pnpm clean && pnpm build",
    "prepublishOnly": "pnpm build:full",
    "postinstall": "node scripts/postinstall.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    }
  },
  "keywords": [
    "zerocat",
    "authentication",
    "wallet",
    "zerobrix",
    "react",
    "nextjs"
  ],
  "author": "ZEROCAT",
  "license": "BSD-3-Clause",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^13.0.0 || ^14.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-label": "^2.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "tailwindcss": "^3.0.0",
    "lucide-react": "^0.263.1 || ^0.460.0",
    "framer-motion": "^10.0.0 || ^11.0.0",
    "qrcode.react": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}