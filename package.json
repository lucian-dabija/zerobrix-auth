{
  "name": "@zerobrix/auth",
  "version": "1.0.0",
  "description": "Authentication library to add ZeroBrix Wallet authentication protocol.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf ./dist",
    "lint": "eslint ./src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "verify": "tsx scripts/verify-build.ts",
    "build:full": "pnpm clean && pnpm build && pnpm verify",
    "prepublishOnly": "pnpm build:full",
    "preinstall": "npx only-allow pnpm"
  },
  "files": [
    "dist",
    "react",
    "server"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    }
  },
  "keywords": [
    "zerocat",
    "authentication",
    "wallet",
    "zerobrix",
    "react",
    "nextjs"
  ],
  "author": "ZEROCAT",
  "license": "BSD-3-Clause",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-label": "^2.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "tailwindcss": "^3.0.0",
    "lucide-react": "^0.263.1 || ^0.460.0",
    "framer-motion": "^10.0.0 || ^11.0.0",
    "qrcode.react": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "tsx": "^4.7.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "framer-motion": "^11.11.17",
    "lucide-react": "^0.460.0",
    "next": "^15.0.3",
    "qrcode.react": "^4.1.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15"
  }
}